<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

    <com.github.piasy.biv.view.BigImageView
            android:id="@+id/mBigImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:initScaleType="centerInside"
            app:failureImage="@drawable/ic_cloud_off_white"
            />

    <Spinner
            android:id="@+id/mScaleType"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:entries="@array/init_scale_type"
            android:background="@android:color/white"
            />

    <Spinner
            android:id="@+id/mImageSize"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="15dp"
            android:entries="@array/image_size"
            android:background="@android:color/white"
            />

    <Button
            android:id="@+id/mBtnLoad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/bttn_load"
            />
</FrameLayout>
