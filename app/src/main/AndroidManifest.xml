<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.github.piasy.biv.example">

    <application
            android:name=".App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".FrescoLoaderActivity">
        </activity>
        <activity android:name=".GlideLoaderActivity">
        </activity>
        <activity android:name=".LongImageActivity">
        </activity>
        <activity android:name=".ScaleTypeActivity">
        </activity>
        <activity android:name=".ImageLoaderCallbackActivity">
        </activity>
    </application>

</manifest>